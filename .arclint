{
    "exclude": [
        "(\\.idea$)",
        "(\\.gradle$)",
        "(^build/)",
        "(^gradle/)"
    ],
    "linters": {
        "checkstyle": {
            "type": "checkstyle",
            "include": "(\\.java$)"
        },
        "detekt": {
            "type": "detekt",
            "include": [
                "(\\.kt$)",
                "(\\.kts$)"
            ]
        },
        "filename": {
            "type": "filename"
        },
        "json": {
            "type": "json",
                "include": [
                    "(^\\.arcconfig$)",
                    "(^\\.arclint$)",
                    "(\\.json$)",
                    "(\\.json.sample$)"
                ]
        },
        "generated": {
            "type": "generated"
        },
        "nolint": {
            "type": "nolint"
        },
        "spelling": {
            "type": "spelling"
        },
        "text": {
            "type": "text",
            "severity": {
                "1": "disabled",
                "3": "disabled",
                "5": "disabled"
            }
        },
        "xml": {
          "type": "xml",
          "include": "(\\.xml$)"
        }
    }
}
